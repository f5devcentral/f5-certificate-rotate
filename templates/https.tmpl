{{ with secret "pki_int/issue/web-certs" "common_name=www.demof5.com" }}
{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.0.0",
        "id": "123abc",
        "label": "Demo Application",
        "remark": "HTTPS with Predictive-Node Pool",
        "Demof5": {
            "class": "Tenant",
            "HTTPS": {
                "class": "Application",
                "template": "https",
                "serviceMain": {
                    "class": "Service_HTTPS",
                    "virtualAddresses": [
                        "10.0.0.200"
                    ],
                    "pool": "web_pool",
                    "virtualPort": 8080,
                    "serverTLS": "webtls"
                },
                "web_pool": {
                    "class": "Pool",
                    "loadBalancingMode": "predictive-node",
                    "monitors": [
                        "http"
                    ],
                    "members": [
                        {
                            "servicePort": 80,
                            "serverAddresses": [
                                "10.0.0.171",
                                "10.0.0.172"
                            ]
                        }
                    ]
                },
                "webtls": {
                    "class": "TLS_Server",
                    "certificates": [
                        {
                            "certificate": "webcert"
                        }
                    ]
                },
                "webcert": {
                    "class": "Certificate",
                    "label": "Demo Webcert",
                    "remark": "Initialize",
                    "certificate": "{{ .Data.certificate | toJSON | replaceAll "\"" "" }}",
                    "privateKey": "{{ .Data.private_key | toJSON | replaceAll "\"" "" }}",
                    "chainCA": "{{ .Data.issuing_ca | toJSON | replaceAll "\"" "" }}"
                }
            }
        }
    }
}
{{ end }}
